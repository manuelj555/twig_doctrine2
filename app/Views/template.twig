<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>PHPLOT con Twig y Doctrine2</title>
        <link href="{{ asset('css/normalize.css') }}" rel="stylesheet">
        <link href="{{ asset('css/foundation.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        <link href="{{ asset('css/smoothness/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet">
        {% block stylesheet %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="columns large-12"><h1><a href="{{ path('') }}">{% block titulo "" %}</a></h1></div>
            </div>
            <div class="row">
                <div class="columns large-9 right">
                    {% include "flashes.twig" %}
                        <div class="content">
                    {% block cuerpo %}
                    {% endblock cuerpo %}
                    </div>
                </div>
                <div class="columns large-3 left">
                    {% include "menu.twig" %}                    
                </div>
            </div>
        </div>
        <script src="{{ asset('js/jquery-1.9.1.min.js') }}"></script>
        <script src="{{ asset('js/vendor/jquery.js') }}"></script>
        <script src="{{ asset('js/foundation.min.js') }}"></script>
        <script src="{{ asset('js/jquery-ui-1.10.3.custom.min.js') }}"></script>
        <script>$(document).foundation()</script>
        {% block javascript %}
        {% endblock %}
    </body>
</html>

