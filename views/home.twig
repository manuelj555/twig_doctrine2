{% extends "template.twig" %}

{% block cuerpo %}
<h1>Personas en la BD</h1>
<p><a href="{{ path('crear.php') }}">Crear</a></p>
<table>
    <thead>
    <th>ID</th>
    <th>Nombre</th>
    <th>Edad</th>
    <th>Edit</th>
</thead>
<tbody>
    {% for e in personas %}
        <tr>
            <td>{{ e.id }}</td>
            <td>{{ e.nombre }}</td>
            <td>{{ e.edad }}</td>
            <td><a href="{{ path('editar.php', {id: e.id }) }}">Editar</a></td>
        </tr>
    {% endfor %}
</tbody>
</table>
{% endblock cuerpo %}